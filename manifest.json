{
  "manifest_version": 2,
  "name": "N school text extension",
  "version": "1.0",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "images/n_icon19.png",
    "default_title": "N school text extension"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.nnn.ed.nico/*"],
      "js": ["jquery-2.2.3.min.js"]
    }
  ],
  "icons": {
    "16": "images/n_icon16.png",
    "48": "images/n_icon48.png",
    "128": "images/n_icon128.png"
  }
}